nav.navbar.navbar-default.navbar-fixed-top(class= settings.Theme === "dark" || settings.Theme === "default" ? "navbar-inverse" : "")
   .container-fluid
     // Brand and toggle get grouped for better mobile display
     .navbar-header
       button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
         span.sr-only Toggle navigation
         span.icon-bar
         span.icon-bar
         span.icon-bar
       a.navbar-brand(href='/')= title
     // Collect the nav links, forms, and other content for toggling
     #bs-example-navbar-collapse-1.collapse.navbar-collapse
       ul.nav.navbar-nav
         li
           a(href='/image') Image Only
         if settings.AllowRefreshNow     
            li
               a(href="/refresh") Get Latest
         if settings.EnableTimelapse
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | Time Lapse 
                span.caret
              ul.dropdown-menu
                li
                  a(href="/timelapse") Full
                li.divider(role='separator')
                li
                  a(href="/timelapse?reduce=2") Reduced Half
                li
                  a(href="/timelapse?reduce=3") Reduced Third
                li
                  a(href="/timelapse?reduce=4") Reduced Quarter 
       ul.nav.navbar-nav.navbar-right
          
          li
             p.navbar-text
               span.time-value #{sunrisesunset.current}               
          li
             a(href='https://github.com/gsirhc/NodeWebcamServer') Help
         