extends layout

block script
   script(type='text/javascript').
      var totalImages = #{images.length);
   script(src="/javascripts/timelapse.js")

block page-head
   link(rel='stylesheet', href='/stylesheets/timelapse.css')

block content
   .timelapse-container
      .carousel(id="carousel-timelapse", data-ride="carousel", data-interval="100")
         .carousel-inner(role="listbox")
            each file, index in images
               .item(class=index === 0 ? "active" : "")
                  .timelapse-image
                     img(src="timelapse/#{file.filePath}").img-responsive.center-block
                     span #{file.timeStr}
         .progress
            .progress-bar(aria-valuenow="60", aria-valuemin="0", aria-valuemax="100")