extends layout

block page-head
   link(rel='stylesheet', href='/stylesheets/timelapse.css')

block content
   .timelapse-container
      .carousel(id="carousel-example-generic", data-ride="carousel", data-interval="100")
         .carousel-inner(role="listbox")
            each file, index in imageFiles
               .item(class=index === 0 ? "active" : "")
                  img(src="#{file}" width="#{settings.ImageWidth}").timelapse-image.img-responsive